{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom", "esnext"],
    "target": "ES2018",
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
  ],
}
